{
  "name": "ts-cucumber-playwright-framework",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript + Cucumber + Playwright E2E framework with Page Objects, tags, reporting, and GitHub Actions.",
  "scripts": {
    "test:e2e": "cucumber-js --config cucumber.js",
    "test:e2e:ci": "cucumber-js --config cucumber.js --retry 1",
    "test:smoke": "npm run test:e2e -- --tags \"@smoke and not @wip\"",
    "test:regression": "npm run test:e2e -- --tags \"@regression and not @wip\"",
    "clean": "rimraf reports test-results dist .cache"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.47.0",
    "@types/node": "^22.10.0",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.1.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
